@model IEnumerable<FinalProMo3askar13102021.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>

                <td>
                    @item.StartDate.ToShortDateString()
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    @if (item.isActive == true)
                    {
                        <span class="text-success">Yes, Active</span>
                    }
                    else
                    {
                        <span class="text-success">None Active</span>
                    }

                </td>

                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                    <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.CourseId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
